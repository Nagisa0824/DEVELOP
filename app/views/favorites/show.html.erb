<h1>いいね一覧</h1>
<table>
<% if @favorites.exists? %>
    <% @favorites.each  do |favorite| %>
     <% post = Post.find_by(id: favorite.post_id) %>
     <tr>
       <td><%= link_to user_path(favorite.post.user_id) do %>
          <%= attachment_image_tag(favorite.post.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
       </td><% end %>
       <td><%= link_to favorite.post.body, post_path(post), class: "post_#{post.id}" %></td>
     </tr>
    <% end  %>
  <% else%>
   <p>ありません</p>
  <% end %>
  </table>
<%= paginate @favorites %>
