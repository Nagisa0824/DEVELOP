<%= form_with model: post,url:"/posts/#{@post.id}", local:true do |f| %>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>
  <div class="form-group">
  　<%= f.attachment_field :image %>
  </div>
  

  <div class="form-group">
    <%= f.submit "投稿する", class: 'btn btn-success' %>
  </div>
<% end %>