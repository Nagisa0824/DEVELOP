<div class="row">

    <% posts.each do |post| %>
    　　<!--プロフィール画像-->
    　<!--<div class="border">-->
    　
      <tr>
      　<div class="col-md-1">
          <td><%= link_to user_path(post.user) do %>
            <%= attachment_image_tag(post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %>
          <% end %>
          </td>
      　</div>
      　<div class="col-md-9">
          <td><%= post.user.name %></td>
          <!--フォローボタン-->
          <td>
            <% if current_user.following?(@user) %>
             <button type="button" class="btn btn-outline-dark ">
              <%= link_to "フォロー中", user_relationships_path(@user.id), method: :delete,class:'fas fa-user-check' %>
             </button>
             <% else %>
              <button type="button" class="btn btn-outline-dark">
               <%= link_to "フォローする", user_relationships_path(@user.id), method: :post,class:'fas fa-user-plus' %>
              </button>
            <% end %>
          </td>
          <td><%= post.created_at %></td>
      　</div>
      </tr>
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <tr>
          <td><%= link_to post.body,post_path(post.id),class:"link" %></td>
          
          
          <div class="nested-col-5">
            <td><%= attachment_image_tag post, :image, :fill, 120, 100, format: 'jpeg' %>
          </div>
        </tr>
      </div>
      
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <tr>
          <td><%= link_to post.post_comments.count,post_path(post.id),class:"far fa-comment link" %></td>
          <!--いいねボタン-->
          <td>
            <div id="favorites_buttons_<%= post.id %>">
               <% if post.favorited_by?(current_user) %>
            <p>
              <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
                ♥<%= post.favorites.count %> いいね
              <% end %>
            </p>
           <% else %>
            <p>
              <%= link_to post_favorites_path(post), method: :post, remote: true do %>
                ♡<%= post.favorites.count %> いいね
              <% end %>
            </p>
<% end %>
             </div>
          </td>
        </tr>
      </div>
        <!--<tr>-->
          <!--<td><%#= attachment_image_tag post, :image, :fill, 120, 100, format: 'jpeg' %></td>-->

        <!--</tr>-->
    　<!--</div>-->

    <% end %>

</div>
<%= paginate @posts %>
