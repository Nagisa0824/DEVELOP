<table class='table'>
  <% posts.reverse.each do |post| %>
  　　<!--プロフィール画像-->
      <tr>
        <td><%= link_to user_path(post.user) do %>
          <%= attachment_image_tag(post.user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg") %>
        <% end %>
        </td>
        <td><%= @user.name %></td>
        <!--フォローボタン-->
        <td>
          <% if current_user.following?(@user) %>
           <button type="button" class="btn btn-outline-dark ">
            <%= link_to "フォロー中", user_relationships_path(@user.id), method: :delete %>
           </button>
           <% else %>
            <button type="button" class="btn btn-outline-dark">
             <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
            </button>
          <% end %>
        </td>
        <td><%= post.created_at %></td>

      </tr>

      <tr>
        <td><%= link_to post.body,post_path(post.id) %></td>
      </tr>
      <tr>
        <td><%= attachment_image_tag post, :image, :fill, 100, 100, format: 'jpeg' %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>

  <% end %>
</table>