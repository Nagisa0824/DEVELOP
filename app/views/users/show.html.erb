<div class='container-fluid'>
  <div class='row mt-5'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New Post</h2>
      <%= render 'posts/form', post: @post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Posts</h2>
      <div class="border">
        <%= render 'posts/index',posts: @posts %>
      </div>
    </div>
  </div>
</div>