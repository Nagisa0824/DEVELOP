<div class="row">
  <% users.each do |user| %>
  
    
    <div class="col-1">
      <td>
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag(user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %>
        <% end %>
      </td>
    </div>
    <tr>
      <div class="col-11">
        <td><%= user.name %></td>
        <td>
          <%= link_to user.followings.count, user_followings_path(user.id) %>
        </td>
        <td><%= link_to user.followers.count,user_followers_path(user.id) %></td>
        <td>
          
          <% if current_user.following?(user) %>
             <button type="button" class="btn btn-outline-dark ">
               <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete,class:'fas fa-user-check' %>
             </button>
           <% else %>
               <button type="button" class="btn btn-outline-dark ">
                 <%= link_to "フォローする", user_relationships_path(user.id), method: :post,class:'fas fa-user-plus' %>
               </button>
          <% end %>
        </td>
        
        <div class="nested-col-10">
         <td><%= user.introduction%></td>
        </div>
      </div>
      <div class="col-12">
        <br>
      </div>
    </tr>
  
  <% end %>
</div>
<%= paginate @users %>