<p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.reverse.each do |post_comment| %>
    <div class="row border p-2">
      <div class="col-2">
        <%= link_to user_path(post_comment.user) do%>
         <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %>
        <% end %>
      </div>
      <div class="col-7">
        <%= link_to post_comment.user.name,user_path(@post.user) %>
        <%= post_comment.created_at %>
        <div class="nested col-7">
          <%= post_comment.comment %>
        </div>
      </div>
      <div class="col-3">
        <% if post_comment.user == current_user %>
          <div class="comment-delete">
            <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  
  

